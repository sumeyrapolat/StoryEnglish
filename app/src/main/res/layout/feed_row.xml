<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerRowUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="User"
        android:textStyle="bold"
        android:textColor="@color/week_header"
        android:fontFamily="sans-serif"
        android:layout_marginTop="15dp"
        >
    </TextView>
    <TextView
        android:id="@+id/recyclerViewWordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your words"
        android:textColor="@color/words"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textSize="16sp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerViewStoryHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/story_header"
            android:textStyle="bold"
            android:textSize="18sp"
            android:hint="Story Header"
            >

        </TextView>
        <TextView
            android:id="@+id/recyclerViewStoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:hint="Your story">

        </TextView>
    </LinearLayout>


</LinearLayout>